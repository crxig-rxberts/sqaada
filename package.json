{
  "name": "sqaada",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "start-server": "concurrently \"docker compose up\" \"npx nodemon server/index.js\" ",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run start-server\" \"npm run client\" ",
    "lint": "npx eslint .",
    "unit-test": "cross-env NODE_ENV=test jest --runInBand --coverage --testTimeout=10000 'tests/server' 'tests/client'",
    "integration-test": "cross-env NODE_ENV=test jest --runInBand --testTimeout=10000 'tests/integration'",
    "build": "cd client && npm run build",
    "docker-build": "docker build -t to-do-app .",
    "docker-run-local": "docker run -p 8080:8080 -e DYNAMODB_ENDPOINT=http://host.docker.internal:8000 to-do-app",
    "docker-start": "npm run docker-build && npm run docker-run-local"
  },
  "author": "Craig Roberts, Alexander Keen",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.614.0",
    "@aws-sdk/lib-dynamodb": "^3.614.0",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "fetch": "^1.1.0",
    "morgan": "^1.10.0",
    "react-router-dom": "^6.24.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.7.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "axios": "^1.7.2",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "jsdom": "^24.1.0",
    "supertest": "^7.0.0"
  }
}
